#include <iostream>
#include <vector>
using namespace std;

struct Expense {
    string category;
    double amount;
};

vector<Expense> expenses;

void addExpense() {
    Expense e;
    cout << "Enter category: ";
    cin >> e.category;
    cout << "Enter amount: ";
    cin >> e.amount;
    expenses.push_back(e);
    cout << "âœ… Expense added!\n";
}

void viewExpenses() {
    double total = 0;
    cout << "\nðŸ“Š Expense Summary:\n";
    for (const auto &e : expenses) {
        cout << e.category << ": $" << e.amount << "\n";
        total += e.amount;
    }
    cout << "ðŸ’° Total Spent: $" << total << "\n";
}

int main() {
    int choice;
    do {
        cout << "\n1ï¸âƒ£ Add Expense\n2ï¸âƒ£ View Expenses\n3ï¸âƒ£ Exit\nChoose an option: ";
        cin >> choice;

        switch (choice) {
            case 1: addExpense(); break;
            case 2: viewExpenses(); break;
            case 3: cout << "ðŸ“Œ Exiting Expense Tracker.\n"; break;
            default: cout << "âŒ Invalid choice! Try again.\n";
        }
    } while (choice != 3);
    
    return 0;
}
